{
  "env": {
    "CLAUDE_CODE_SHELL": "bash",
    "AI_ORCHESTRA_DIR": "/Users/yoshihiko/ghq/github.com/yoshihiko555/ai-orchestra"
  },
  "permissions": {
    "allow": [
      "Read",
      "Search",
      "Glob",
      "Grep",
      "Bash(ls *)",
      "Bash(cat *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(git *)",
      "Bash(find *)",
      "Bash(wc *)",
      "Bash(codex *)",
      "Bash(gemini *)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(sudo *)",
      "Bash(*> .env*)",
      "Bash(*>> .env*)",
      "Bash(*credentials*)",
      "Bash(*secret*)",
      "Bash(*password*)",
      "Read(.env)"
    ],
    "additionalDirectories": [
      "//tmp/claude-501",
      "//private/tmp/claude-501"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/claude_message.sh stop"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/claude_message.sh notification"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/claude_message.sh success"
          }
        ]
      }
    ],
    "PostToolUseFailure": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/claude_message.sh failure"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "$HOME/.claude/statusline-command.sh"
  },
  "enabledPlugins": {
    "frontend-design@claude-plugins-official": false,
    "context7@claude-plugins-official": false,
    "Notion@claude-plugins-official": false,
    "gopls-lsp@claude-plugins-official": false,
    "code-simplifier@claude-plugins-official": false,
    "playwright@claude-plugins-official": false,
    "claude-mem@thedotmack": false
  },
  "language": "日本語",
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "excludedCommands": ["docker", "docker-compose", "codex", "gemini"],
    "allowUnsandboxedCommands": true
  },
  "skipDangerousModePermissionPrompt": true
}
