{
  "env": {
    "CLAUDE_CODE_SHELL": "bash"
  },
  "permissions": {
    "allow": [
      "Read",
      "Search",
      "Glob",
      "Grep",
      "Bash(ls *)",
      "Bash(cat *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(git *)",
      "Bash(find *)",
      "Bash(wc *)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(sudo *)",
      "Bash(*> .env*)",
      "Bash(*>> .env*)",
      "Bash(*credentials*)",
      "Bash(*secret*)",
      "Bash(*password*)",
      "Read(.env)"
    ],
    "additionalDirectories": [
      "//tmp/claude-501",
      "//private/tmp/claude-501"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/claude_message.sh stop"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/claude_message.sh notification"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/claude_message.sh success"
          }
        ]
      }
    ],
    "PostToolUseFailure": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/claude_message.sh failure"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "frontend-design@claude-plugins-official": true,
    "context7@claude-plugins-official": true,
    "Notion@claude-plugins-official": true,
    "gopls-lsp@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true
  },
  "language": "日本語",
  "sandbox": {
    "enabled": false
  }
}
